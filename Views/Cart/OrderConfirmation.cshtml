@model Order
@{
    ViewBag.Title = "Order Confirmation";
}

<div class="text-center py-4">
    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
    <h2 class="mt-3 text-success">Order Confirmed!</h2>
    <p class="lead">Thank you for your order. Your order number is <strong>#@Model.OrderId</strong></p>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Success"]
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Order Details</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Order Number:</strong> #@Model.OrderId<br>
                        <strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy h:mm tt")<br>
                        <strong>Status:</strong> <span class="badge bg-success">@Model.Status</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Customer:</strong> @Model.Customer.CompanyName<br>
                        <strong>Email:</strong> @Model.Customer.Email<br>
                        <strong>Phone:</strong> @Model.Customer.Phone
                    </div>
                </div>
                
                <h6>Items Ordered:</h6>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-center">Discount</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.Product.ProductName</td>
                                    <td class="text-center">$@item.UnitPrice.ToString("F2")</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-center">
                                        @if (item.DiscountAmount > 0)
                                        {
                                            <span class="text-success">-$@item.DiscountAmount.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end">$@((item.UnitPrice * item.Quantity) - item.DiscountAmount).ToString("F2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="row mt-3">
                    <div class="col-md-6 offset-md-6">
                        <div class="d-flex justify-content-between">
                            <span>Subtotal:</span>
                            <span>$@(Model.TotalAmount + Model.DiscountAmount).ToString("F2")</span>
                        </div>
                        @if (Model.DiscountAmount > 0)
                        {
                            <div class="d-flex justify-content-between text-success">
                                <span>Discount:</span>
                                <span>-$@Model.DiscountAmount.ToString("F2")</span>
                            </div>
                        }
                        <div class="d-flex justify-content-between">
                            <span>Shipping:</span>
                            <span class="text-success">FREE</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total:</strong>
                            <strong>$@Model.TotalAmount.ToString("F2")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <a asp-controller="Product" asp-action="Category" class="btn btn-primary me-2">
                <i class="bi bi-shop"></i> Continue Shopping
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-house"></i> Home
            </a>
        </div>
    </div>
</div>